@model QLAC.Domain.Staff

@{
    ViewBag.Title = "Chỉnh sửa thông tin nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Chỉnh sửa thông tin nhân viên</h2>

