@model QLAC.Domain.Shift
@{
    ViewBag.Title = "Chỉnh sửa ca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Chỉnh sửa thông tin ca</h2>

<form action="/Shift/Edit?id=ID" method="post">
    <div class="form-horizontal">
    <hr />
    <div class="form-group">        
        <label class="control-label col-md-2" for="Code">Code</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="Code" name="Code" type="text" value=@Model.Code>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Tên ca</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="Name" name="Name" type="text" value=@Model.Name>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="RegFrom">Đăng ký từ</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="RegFrom" name="RegFrom" type="text" value=@Model.RegFrom>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="RegTo">Đăng ký tới</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="RegTo" name="RegTo" type="text" value=@Model.RegTo>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default">
        </div>
    </div>
</div>
</form>
<div>
    <button onclick="location.href='/Shift/ShiftIndex'" class="btn btn-default">Back to list</button>
</div>
